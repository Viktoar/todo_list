<div class="title">
	<i class="fas fa-calendar-alt title-icon"></i>
	<h2 class="title-text"> 
    <%= @list.name %>
  </h2>
	<%= link_to  edit_list_path(@list), class: "title-edit", remote: true do %>
		<i class="fas fa-pen "></i>
	<% end %>
	<%= link_to  list_path(@list), class: "title-delete", method: :delete, remote: true do %>
		<i class="fas fa-trash-alt "></i>
	<% end %>
</div>