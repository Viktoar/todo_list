<li class="tasks_item" id="task_<%=task.id%>">
	<%# p task.id %>
	<div class="tasks_item-checkbox">
		<%# p task.id %>
		<%= check_box_tag "name", [task.list.id, task.id], task.done, :class => "tasks_item-check" %>
	</div>
	<div class="tasks_item-text <%= task.deadline_info %>">
		<div class="task ">
			<%= task.name %> 
		</div>
		<div class="deadline ">
		<% if task.deadline.present? %>
    	<%= "#{task.deadline.strftime("%d.%m.%Y %H:%M")}" %>
     <% end %>
 		</div>
	</div>
  <div class="tasks_item-modify">
  	<i class="fas fa-arrows-alt-v drag handle"></i>
  	<div class="task_item-edit">
			<%= link_to edit_list_task_path(task.list, task), remote: true do %>
				<i class="fas fa-pen"></i>
			<% end %>
		</div>
		<div class="task_item-delete">
			<%= link_to list_task_path(task.list, task), method: :delete, remote: true do %>
				<i class="fas fa-trash-alt"></i>
			<% end %>
		</div>
	</div>
	<%#= render 'tasks/info', task: task  %>
</li>

