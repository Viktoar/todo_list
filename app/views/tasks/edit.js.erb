$("#list_<%= @list.id %> .tasks").remove();
$("#list_<%= @list.id %>")
			.append("<%= j render partial:'tasks/new' %>");
$("#task_<%= @task.id%> .tasks_item-checkbox").remove();
$("#task_<%= @task.id%> .tasks_item-text").remove();
$("#task_<%= @task.id%> .tasks_item-modify").remove();
$("#task_<%= @task.id %> ")
			.append("<%= j render partial:'tasks/edit', locals:{task: @task} %>");
$(function () {
	console.log("<%= @task.id %>")
  $("#edit_task_<%= @task.id %> ").find('#task_deadline').datetimepicker({ format: 'd.m.Y H:i' });
  $("#edit_task_<%= @task.id %> ").find('#task_name').focus();
});