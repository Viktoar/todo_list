<div class="login">
  <div class="container">
    <h1>Log in</h1>
    <div class="login-form">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Log in", class: "login-btn"%>
      <% end %>
    </div>
  </div>
</div>